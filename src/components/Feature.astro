---
import Container from "./Container.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="feature">
    <Container>
      <!-- Section 1 -->
      <div class="space-y-6 w-full justify-between text-gray-600 md:flex flex-row-reverse md:gap-6 md:space-y-0 lg:gap-12 lg:items-center">
        <div class="md:5/12 lg:w-1/2">
          <img data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" src="/svg/s1.svg" alt="Aktivitas Image" loading="lazy" width="" height="" class="w-full"/>
        </div>
        <div data-aos="zoom-in" class="md:7/12 lg:w-1/2">
          <h2 class="text-2xl md:text-[28px] font-bold text-gray-900 md:text-4xl dark:text-white">
            { t('note.title') }
          </h2>
          <p class="my-6 text-gray-600 dark:text-gray-300 md:text-lg">
            { t('note.descriptionOne') } <span class="font-bold text-gray-900">{ t('note.highlightOne') }</span> {t('note.descriptionTwo')} <span class="font-bold text-gray-900">{ t('note.highlightTwo') }</span> {t('note.descriptionThree')}
          </p>
        </div>
      </div>

      <!-- Section 2 -->
      <div class="space-y-6 w-full justify-between text-gray-600 md:flex md:gap-6 md:space-y-0 lg:gap-12 lg:items-center mt-10 md:mt-28">
        <div class="md:5/12 lg:w-1/2">
          <img data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" src="/svg/s2.svg" alt="Aktivitas Image" loading="lazy" width="" height="" class="w-full"/>
        </div>
        <div data-aos="zoom-in" class="md:7/12 lg:w-1/2">
          <h2 class="text-2xl md:text-[28px] font-bold text-gray-900 md:text-4xl dark:text-white">
            { t('watch.title') }
          </h2>
          <p class="my-6 text-gray-600 dark:text-gray-300 md:text-lg">
            { t('watch.descriptionOne') } <span class="font-bold text-gray-900"> { t('watch.highlightOne') }</span>  { t('watch.descriptionTwo') } <span class="font-bold text-gray-900"> { t('watch.highlightTwo') }</span>  { t('watch.descriptionThree') }
          </p>
        </div>
      </div>

      <!-- Section 3 -->
      <div class="space-y-6 w-full justify-between text-gray-600 md:flex flex-row-reverse md:gap-6 md:space-y-0 lg:gap-12 lg:items-center mt-10 md:mt-28">
        <div class="md:5/12 lg:w-1/2">
          <img data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" src="/svg/s3.svg" alt="Aktivitas Image" loading="lazy" width="" height="" class="w-full"/>
        </div>
        <div data-aos="zoom-in" class="md:7/12 lg:w-1/2">
          <h2 class="text-2xl md:text-[28px] font-bold text-gray-900 md:text-4xl dark:text-white">
            { t('reminder.title') }
          </h2>
          <p class="my-6 text-gray-600 dark:text-gray-300 md:text-lg">
            { t('reminder.descriptionOne') } <span class="font-bold text-gray-900">{ t('reminder.highlightOne') }</span> { t('reminder.descriptionTwo') } <span class="font-bold text-gray-900">{ t('reminder.highlightTwo') }</span> { t('reminder.descriptionThree') }
          </p>
        </div>
      </div>

       <!-- Section 4 -->
       <div class="space-y-6 w-full justify-between text-gray-600 md:flex md:gap-6 md:space-y-0 lg:gap-12 lg:items-center mt-10 md:mt-28">
        <div class="md:5/12 lg:w-1/2">
          <img data-aos="fade-up" data-aos-anchor-placement="bottom-bottom" src="/svg/s4.svg" alt="Aktivitas Image" loading="lazy" width="" height="" class="w-full"/>
        </div>
        <div data-aos="zoom-in" class="md:7/12 lg:w-1/2">
          <h2 class="text-2xl md:text-[28px] font-bold text-gray-900 md:text-4xl dark:text-white">
            { t('report.title') }
          </h2>
          <p class="my-6 text-gray-600 dark:text-gray-300 md:text-lg">
            { t('report.descriptiontOne') } <span class="font-bold text-gray-900">{ t('report.highlightOne') }</span> { t('report.descriptiontTwo') } <span class="font-bold text-gray-900">{ t('report.highlightTwo') }</span>
          </p>
        </div>
      </div>
    </Container>
</div>