---
import Container from "./Container.astro"

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="features">
  <Container>
    <div data-aos="zoom-in" class="md:w-2/3 text-center py-9 bg-pink-300 mx-auto bg-[url('/svg/bg_about.svg')] rounded-lg md:mt-80 px-4 md:px-0">
      <h2 class="text-2xl md:text-[28px] font-bold dark:text-white">
        {t('info.title')}
      </h2>
      <p class="md:w-3/4 mx-auto text-gray-600 mt-4 md:text-lg">{t('info.description')}</p>

      <div class="grid md:grid-cols-2 mt-8 space-y-6 md:space-y-0">
        <div>
          <h class="text-2xl"><span class="text-3xl font-bold text-mainGreen">26.18</span>{t('info.million')}</h>
          <p class="text-gray-600 mt-2.5">{t('info.leftDescriptionUp')} <br class="hidden md:block"> {t('info.leftDescriptionBt')}</p>
        </div>
        <div>
          <h class="text-2xl"><span class="text-3xl font-bold text-mainGreen">200</span>{t('info.thousand')}</h>
          <p class="text-gray-600 mt-2.5">{t('info.rightDescriptionUp')} <br class="hidden md:block"> {t('info.rightDescriptionBt')}</p>
        </div>
      </div>
    </div>
  </Container>
</div>